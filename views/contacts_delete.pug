extends layout

block content
  header(id="list-header")
    h1= heading
  p.deleteWarning Are you sure you want to delete the following Contact ?
  if contact.length> 0
  #contact-wrapper 
    ul.contact-details 
      li= `First Name : ${contact.contactData.firstName}`
      li= `Last Name  :  ${contact.contactData.lastName}`
      li= `Email      : ${contact.contactData.email}`
      li= `Notes      :      ${contact.contactData.notes}`
      li= `Created On : ${contact.contactData.date}`
      .imagesContainer 
        each val in contact.contactData.images
          embed(src= '/' +val alt='contact' style='width:100px; height:100px; padding: 1rem;')
  form(class="deleteContact" method="POST" action=`/contacts/${contact.id}/delete`)
    button(class="btn")
      | Confirm Delete
      | 
    a(class= "cancelContact" href=`/contacts/${contact.id}`) Cancel